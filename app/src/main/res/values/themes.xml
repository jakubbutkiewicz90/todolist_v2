<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Todolist_v2" parent="android:Theme.Material.Light.NoActionBar">
    </style>

    <style name="FirebaseUITheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:textColorHint">#BDBDBD</item>
        <item name="buttonStyle">@style/FirebaseUIButton</item>
    </style>

    <style name="FirebaseUIButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/firebase_button_background</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item> <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">200</item> <item name="postSplashScreenTheme">@style/Theme.Todolist_v2</item> </style>

    <style name="Theme.TodolistV2.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>